<html>

  <header>
    <h1>Books</h1>
  </header>

  <body>

      <div class="book_item">
        <h5 class="subtitle1">Title</h5>
        <h5 class="subtitle2">Body</h5>
      </div>

    <% @books.each do |book| %>
      <div class="book_all">
        
        <div class="book_index">
          <p class ="book_title"><%= book.title %></p>
          <p class="book_body"><%= book.body %></p>
        </div>
        
        <div class="book_link">
          <%= link_to "Show",book_path(book) %>
          <%= link_to 'Edit', edit_book_path(book) %>
          <%= link_to "Destroy", book_path(book), method: :delete %>
        </div>
        
      </div>
    <% end %>

    <div class="new_book">

      <h2>New book</h2>
      
      <% if @book.errors.any? %>
      ã€€<div class="main_error">
          <%= @book.errors.count %>error prohibited this book from being saved:
        </div>
        <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

      <%=form_with model:@book,local:true do |f| %>

        <p class="new_subtitle">Title</p>
        <%= f.text_field :title %>

        <p class="new_subtitle">Body</p>
        <%= f.text_area :body %>

        <div class="new_button">
          <%= f.submit 'Create Book' %>
        </div>

      <% end %>

    </div>

  </body>

</html>