<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@bookg, local: true do |f| %>
  <div class="edit_date">
    <p class="edit_title">Title</p>
    <%= f.text_field :title %>
    <p class="edit_body">Body</p>
    <%= f.text_area :body %>
  </div>
  <div class="edit_button">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<div class="edit_link">
  <%= link_to "Show", book_path %>
  <p>|</p>
  <%= link_to "Back", books_path %>
</div>