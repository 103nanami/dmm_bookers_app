<html>
  
  <header>
    <h1>Books</h1>
  </header>
  
  <body>
    <div class="book_item">
      <% @blogs.each do |blog| %>
        <h5 class="subtitle1">Title</h4>
        <h5 class="subtitle2">Body</h4>
        <p class ="book_title"><%= @book.title %></p>
        <p class="book_body"><%= @book.body %></p>
      <% end %>
    </div>
    
    <div class="new_book">
      
      <h2>New book</h2>
      
      <%=form_with model:@book,local:true do |f| %>
      
        <p class="new_subtitle">Title</p>
        <%= f.text_field :title %>
        
        <p class="new_subtitle">Body</p>
        <%= f.text_area :body %>
        
        <div class="new_button">
          <%= f.submit 'Create Book' %>
        </div>
        
      <% end %>
      
    </div>
    
  </body>
  
</html>